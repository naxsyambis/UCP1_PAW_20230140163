<!DOCTYPE html> 
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Perpustakaan</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
  </head>
  <body>
    <div class="container mt-5">
      <h1 class="text-center">Daftar Buku Perpustakaan</h1>

      <!-- Form to Add New Todo -->
      <form id="addBukuForm" class="my-4">
        <div class="input-group">
          <input
            type="text"
            id="newjudul"
            class="form-control"
            placeholder="Tambahkan judul buku baru..."
            required
          />
          <div class="input-group-append">
            <button type="submit" class="btn btn-primary">Tambahkan Buku</button>
          </div>
        </div>
      </form>

      <!-- List of Todos -->
      <ul id="bukuList" class="list-group">
        <% buku.forEach(item=> { %>
        <li
          class="list-group-item d-flex justify-content-between align-items-center"
        >
        <span><%= item.judul %></span>
          <div>
            <button
              class="btn btn-sm btn-success mr-2 editBtn"
              data-id="<%= item.id %>"
            >
              Edit
            </button>
            <button
              class="btn btn-sm btn-danger deleteBtn"
              data-id="<%= item.id %>"
            >
              Delete
            </button>
          </div>
        </li>
        <% }); %>
      </ul>

      <!-- Edit Todo Modal -->
      <div
        id="editModal"
        class="modal fade"
        tabindex="-1"
        role="dialog"
        aria-labelledby="editModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="editModalLabel">Edit Judul Buku</h5>
              <button
                type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form id="editTodoForm">
                <div class="form-group">
                  <label for="editTask">Judul Buku</label>
                  <input
                    type="text"
                    id="editjudul"
                    class="form-control"
                    required
                  />
                </div>
                <button type="submit" class="btn btn-primary mt-3">
                  Simpan perubahan
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap 4 JS + Popper -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
      $(document).ready(function () {
        let editId;

        // Add new todo
        $("#addBukuForm").on("submit", function (e) {
          e.preventDefault();
          const judul = $("#newjudul").val().trim();
          if (judul) {
            $.ajax({
              url: "/perpustakaan",
              type: "POST",
              contentType: "application/json",
              data: JSON.stringify({ judul: judul }),
              success: function () {
                location.reload();
              },
              error: function (error) {
                console.error("Error menambahkan buku:", error.responseText);
              },
            });
          }
        });

        // Delete a todo
        $(".deleteBtn").on("click", function () {
          const id = $(this).data("id");
          $.ajax({
            url: "/perpustakaan/" + id,
            type: "DELETE",
            success: function () {
              location.reload();
            },
          });
        });

        // Show edit modal
        $(".editBtn").on("click", function () {
          editId = $(this).data("id");
          const currentjudul = $(this).closest("li").find("span").text();
          $("#editjudul").val(currentjudul);
          $("#editModal").modal("show");
        });

        // Update todo
        $("#editTodoForm").on("submit", function (e) {
          e.preventDefault();
          const judul = $("#editjudul").val().trim();
          if (judul) {
            $.ajax({
              url: "/perpustakaan/" + editId,
              type: "PUT",
              data: JSON.stringify({ judul: judul }), //   disini belum
              contentType: "application/json",
              success: function () {
                location.reload();
              },
            });
          }
        });
      });
    </script>
  </body>
</html>